<div class="row">
  <form method="post" action="/uf" name="uf" id="uf" enctype="multipart/form-data">
    <div class="panel">
      <h3>Upload file:</h3>
      <br>
      <div class="row">
        <div class="small-12 large-12 columns">
          <input type="file" id="file" name="file" placeholder="file to upload to server">
        </div>
      </div>
      <br>
      <div class="row">
        <div class="small-12 large-12 columns">
          <input type="submit" id="upload" name="upload" value="Upload File" class="button round">
        </div>
      </div>
    </div>
  </form>
</div>

<div class="row">
  <div class="panel">
    <h3>List files:</h3>
    <br>
    <div class="list">
      <% @files.each do |file| %>
        <div class="row">
          <div class="small-4 large-4 columns">
            <a href="/files/<%== file[:name] %>"><%== file[:name] %></a>
          </div>
          <div class="small-4 large-4 columns">
            <a href="/files/<%== file[:name] %>"><%== file[:size] %></a>
          </div>
          <div class="small-4 large-4 columns">
            <a href="/files/<%== file[:name] %>"><%== file[:date].strftime('%d/%m/%Y %T')%></a>
          </div>
        </div>
      <% end %>
      <% if @files.nil? || @files.length == 0 %>
        <h2>No files were found</h2>
      <% end %>
    </div>
  </div>
</div>
